# EditorConfig 帮助在不同的编辑器和 IDE 之间保持一致的编码风格
# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[*.css]
indent_size = 2 